<?xml version="1.0" encoding="utf-8"?>

<div xmlns="http://www.w3.org/1999/xhtml" xid="window" class="window LoginBG" component="$UI/system/components/justep/window/window"
  design="device:mobile">  
  <div component="$UI/system/components/justep/model/model" xid="model" style="height:auto;left:428px;top:-7px;">
    <div component="$UI/system/components/justep/data/data" autoLoad="true" xid="loginData" idColumn="mobile"><column label="手机号码" name="mobile" type="String" xid="xid1"></column>
  <column label="密码 " name="password" type="String" xid="xid2"></column>
  <data xid="default1">[{}]</data></div></div>  
  <span component="$UI/system/components/justep/windowDialog/windowDialog" xid="windowDialog1" src="$UI/AppTest/mainW.w"></span><div xid="div3" class="LoginBG">
    <div xid="div1" class="LoginViewClass"> 
      <h1 xid="h11" class="titleViewClass">
        <img src="$UI/AppTest/logo-yunnan.png" alt="" class="imageClass" xid="image1"/>全国安全培训信息管理平台
      </h1>  
      <div xid="div2" class="loginRegister">
        <div xid="div4" class="warningDiv"><span xid="span2" class="glyphicon glyphicon-remove wrong"><strong>用户名密码输入错误</strong></span></div><div xid="div8" class="warningDiv"><span xid="span2" class="glyphicon glyphicon-link warning"><strong>请检查网络连接</strong></span></div><div xid="div7" class="loginDIV">
          <div xid="div5" class="loginLabel">
            <div component="$UI/system/components/justep/labelEdit/labelEdit"
              class="x-label-edit x-label35" xid="labelInput1"> 
              <label class="x-label" xid="label1"><![CDATA[用户名：]]></label>  
              <input component="$UI/system/components/justep/input/input" class="form-control x-edit"
                xid="input1" bind-ref="loginData.ref('mobile')" placeHolder="请输入手机号"/>
            </div>
          </div>
          <div xid="div6" class="loginLabel">
            <div component="$UI/system/components/justep/labelEdit/labelEdit" class="x-label-edit x-label35" xid="labelPassword1">
   <label class="x-label" xid="label2"><![CDATA[密码：]]></label>
   <input component="$UI/system/components/justep/input/password" class="form-control x-edit" xid="password1" bind-ref="loginData.ref('password')" placeHolder="请输入密码"></input></div></div>
        </div>  
        <a component="$UI/system/components/justep/button/button" class="btn btn-success loginButton"
          label="登陆" xid="button1" onClick="button1Click"> 
          <i xid="i1"/>  
          <span xid="span1">登陆</span>
        </a>
      </div>
    </div>
  </div>
</div>
